<?php

	$numero1 = 10;
	$numero2 = 50;
	$numero3 = 15;
	echo '</BR>';
	echo"<b>=> EXERC√çCIO 04</b></BR></BR>";	
	echo"$numero1, $numero2, $numero3 <BR/> ";

	if($numero1 > 0){
		$numero1 *= 2;
		echo"$numero1 <BR/>";}
	else{
		$numero1 *= 3;
		echo"$numero1 <BR/>";}
		
	if($numero2 > 10 && $numero2 < 100)
		echo"Intervalo permitido <BR/>";
	else
		echo" <BR/>";
		
	if($numero3 < $numero2){
		$numero2 -= $numero3;
		echo"$numero2 <BR/>";}
	else{
		$numero3--;
		echo"$numero3 <BR/>";}	
		
?>
